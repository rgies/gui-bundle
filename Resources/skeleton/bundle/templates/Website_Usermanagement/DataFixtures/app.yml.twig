# Plattform individual parameters
parameters:

    # User role labels
    user_role_labels:
        ROLE_USER:        'User'
        ROLE_EDITOR:      'Editor'
        ROLE_ADMIN:       'Administrator'
        ROLE_SUPER_ADMIN: 'Super Admin'

    # User role icons
    user_role_icons:
        ROLE_USER:        '<i style="color: #AAAAAA" class="fa fa-user fa-fw"></i>'
        ROLE_EDITOR:      '<i style="color: #0069FA; opacity: 0.6;" class="fa fa-user fa-fw"></i>'
        ROLE_ADMIN:       '<i style="color: #FA6900; opacity: 0.6;" class="fa fa-user fa-fw"></i>'
        ROLE_SUPER_ADMIN: '<i style="color: #FE2E2E" class="fa fa-user fa-fw"></i>'


# Workgroup Services
services:
    security_token_service:
        class:            {{ namespace }}\Services\SecurityTokenService
        arguments:        [@doctrine]


# Twig Configuration
twig:
    globals:
        # Variables
        user_roles:       "%user_role_labels%"

        platform:
            name:        "%platform_name%"
            version:     "%platform_version%"
            vendor:      "%platform_vendor%"
            contact:     "%platform_contact%"
            keywords:    "%platform_keywords%"
            description: "%platform_description%"

        label:
            roles:        "%user_role_labels%"

        icon:
            roles:        "%user_role_icons%"

        email:
            support:      "%platform_contact%"

