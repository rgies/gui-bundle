{{ '{% extends "::base.html.twig" %}' }}
{{ '{% block stylesheets %}' }}
    <link href="{{ '{{ asset(\'bundles/' }}{{ bundle_basename|lower }}{{ '/css/default.css\') }}' }}" rel="stylesheet">
    <!-- individual page stylesheets -->
    {{ '{% block css %}{% endblock %}' }}
{{ '{% endblock %}' }}
{{ '{% block body %}' }}
    <!-- Navigation -->
    {{ '{% include \'' }}{{ bundle }}{{ '::navi.html.twig\' %}' }}
    <!-- Content -->
    <div id="content-block" class="container">
        {{ '{% block content %}' }}Content{{ '{% endblock %}' }}
    </div>
    <!-- Scroll to top -->
    <a href="#top" id="toTop" class="well-sm" alt="Scroll to top" title="Scroll to top">
        <span class="glyphicon glyphicon-circle-arrow-up"></span>
    </a>
    <!-- Footer -->
    {{ '{% include \'' }}{{ bundle }}{{ '::footer.html.twig\' %}' }}
{{ '{% endblock %}' }}

{{ '{% block javascripts %}' }}
    <script src="{{ '{{ asset(\'bundles/' }}{{ bundle_basename|lower }}{{ '/js/default.js\') }}' }}"></script>
    {{ '{%- if is_granted("ROLE_EDITOR") %}{{ editor_init() }}{% endif %}' }}
    <!-- individual page java scripts -->
    {{ '{% block js %}{% endblock %}' }}
{{ '{% endblock %}' }}